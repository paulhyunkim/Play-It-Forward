<%= form_for @user do |u| %>

<% if @user.errors.any? %>
        <div id="error_explanation">

          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |user| %>
                <li><%= user %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

<div class = "large-6 medium-7 small-7" id ="formbox">
	<%= u.text_field :username, maxlength: 15, placeholder: "Username (at least 4 characters)", class: "myformcontrol" %>
	<%= u.password_field :password, maxlength: 15, placeholder: "Password (at least 8 characters)", class: "myformcontrol" %>
	<%= u.password_field :password_confirmation, maxlength: 15, placeholder: "Re-enter password", class: "myformcontrol" %>
	<%= u.text_field :email, placeholder: "Email", class: "myformcontrol" %>
	<%= u.text_field :age, maxlength: 2, placeholder: "Age", class: "myformcontrol" %>
	<%= u.select :gender, [["Select Gender", "Select Gender"],["Male", "Male"],["Female","Female"],["Other", "Other"]] %>
	<%= u.text_field :city, placeholder: "City", class: "myformcontrol" %>
	<%= u.text_field :state, placeholder: "State", class: "myformcontrol" %>

	<%= u.submit "Create Account!", class: "buttonsignup" %>
<% end %>
</div>


<div class="modal-footer">
  <button type="button" class="btn" ng-click="hide()">Close</button>
  <button class="btn btn-primary" ng-click="modal.saved=true;hide()">Save changes</button>
</div>
